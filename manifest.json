{
  "name": "GitHub PR files checker",
  "description": "Tool for marking certain files as \"viewed\".",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "./popup/index.html",
    "default_icon": "./favicons/favicon-dark.png"
  },
  "background": {
    "service_worker":"./service-worker/service-worker.js"
  },
  "content_scripts": [
    {
      "js": ["./content-scripts/checker.js"],
      "matches": ["https://*/*"]
    }
  ],
  "permissions": [
    "tabs",
    "activeTab"
  ]
}
